@model IEnumerable<FYP.DB.DBTables.Sale_Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.payment_methodNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.customer_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment_methodNavigation.method_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.sale_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.sale_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.sale_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
