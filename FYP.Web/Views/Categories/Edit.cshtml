@model FYP.DB.DBTables.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="category_id" />
            <div class="form-group">
                <label asp-for="category_name" class="control-label"></label>
                <input asp-for="category_name" class="form-control" />
                <span asp-validation-for="category_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="created_on" class="control-label"></label>
                        <input readonly="1" asp-for="created_on" class="form-control" />
                        <span asp-validation-for="created_on" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="last_modified" class="control-label"></label>
                        <input id="modifiedOn" readonly="1" asp-for="last_modified" class="form-control" />
                        <span asp-validation-for="last_modified" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    document.addEventListener("DOMContentLoaded", function () {
            var createdOnInput = document.getElementById("modifiedOn");
            var currentDate = new Date().toISOString().split("T")[0]; // Get YYYY-MM-DD format
            createdOnInput.value = currentDate;
        });
    </script>
}
