@model IEnumerable<FYP.DB.DBTables.Vendor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NTN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vendor_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NTN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vendor_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.website)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.vendor_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.vendor_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.vendor_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
